{
  "name": "frapcon-vscode",
  "displayName": "FRAPCON Language Support",
  "description": "Syntax highlighting, snippets, and IntelliSense for FRAPCON input files (UO2 and MOX fuel rods)",
  "version": "0.1.0",
  "publisher": "aozturk",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": ["Programming Languages"],
  "keywords": [
    "FRAPCON",
    "fuel performance",
    "nuclear fuel",
    "UO2",
    "MOX",
    "fuel rod",
    "reactor",
    "simulation",
    "materials"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#0f172a",
    "theme": "dark"
  },
  "main": "./dist/extension.js",
  "activationEvents": ["onLanguage:frapcon"],
  "contributes": {
    "languages": [
      {
        "id": "frapcon",
        "extensions": [".inp"],
        "aliases": ["FRAPCON"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "frapcon",
        "scopeName": "source.frapcon",
        "path": "./syntaxes/frapcon.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "frapcon",
        "path": "./snippets/frapcon.json"
      }
    ]
  },
  "scripts": {
    "generate-syntax": "node generate-tmLanguage.js",
    "compile": "npm run generate-syntax && tsc -p .",
    "watch": "tsc -watch -p .",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abdurrahmanozturk/frapcon-vscode"
  },
  "bugs": {
    "url": "https://github.com/abdurrahmanozturk/frapcon-vscode/issues"
  },
  "homepage": "https://github.com/abdurrahmanozturk/frapcon-vscode",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.6.3",
    "@types/node": "^22.5.4",
    "@types/vscode": "^1.80.0",
    "vscode": "^1.1.37"
  }
}